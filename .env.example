# Environment variables for Smart Parking System
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///parking.db

# API Configuration
API_BASE_URL=http://localhost:5000

# AI Configuration - Choose one of the options below

# Option 1: OpenAI (requires paid API key)
# OPENAI_API_KEY=sk-your_openai_key_here
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=gpt-3.5-turbo
# ENABLE_AI_FEATURES=true

# Option 2: OpenRouter (has free models available)
# OPENAI_API_KEY=sk-or-v1-your_openrouter_key_here
# OPENAI_BASE_URL=https://openrouter.ai/api/v1
# OPENAI_MODEL=meta-llama/llama-3.2-3b-instruct:free
# ENABLE_AI_FEATURES=true

# Option 3: No AI (simulation mode only)
ENABLE_AI_FEATURES=false

# Optional: Your site info for OpenRouter rankings
SITE_URL=http://localhost:5000
SITE_NAME=Smart Parking System

# Computer Vision Settings
CONFIDENCE_THRESHOLD=0.7
DETECTION_INTERVAL=30

# Pricing Configuration
BASE_PRICE_PER_HOUR=2.0
DYNAMIC_PRICING_ENABLED=True

# Simulation Settings (for development)
SIMULATION_MODE=True
AUTO_UPDATE_INTERVAL=10
